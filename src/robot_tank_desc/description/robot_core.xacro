<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="inertial_macros.xacro" />

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>

    <xacro:macro name="robot_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0411" length="0.05" />
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0411" length="0.05" />
            </geometry>
        </collision>
    </xacro:macro>  


    <link name="base_link">

    </link>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link" />
        <child link="base_footprint" />
        <origin xyz="0 0 0" rpy="0 0 0" />
    </joint>

    <link name="base_footprint">
    </link>

    <!-- CHASSIS LINK -->
    <!-- Note 0.0206 is to offset the wheels onto the ground -->
    
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="0 0 ${0.066345 + 0.0206}" />
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.0475 -0.090 0" rpy="0 0 -${pi/2}" />
            <geometry>
                <!-- <box size="0.261 0.195 0.074" /> -->
                <mesh filename="file://$(find robot_tank_desc)/stl/robot_frame.stl" scale="0.001 0.001 0.001" />
            </geometry>
            <material name="yellow" />
        </visual>
        <collision>
            <origin xyz="0 0 -0.037" />
            <geometry>
                <box size="0.261 0.195 0.074" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.356" y="0.195" z="0.074">
            <origin xyz="0 0 0.0" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <!-- LEFT WHEEL LINK -->
    
    <!-- Wheels have r=30.6mm and track is 10.6mm wide, so total radius of 41.2mm -->
    <!-- The track is 50mm wide -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel" />
        <!-- Note the wheel is offset on X to account for the center of gravity/turn radius being towards the back of the robot -->
        <origin xyz="-0.05 0.1225 0.0206" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0412" length="0.05" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0412" length="0.05" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.0412">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL LINK -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel" />
        <!-- Note the wheel is offset on X to account for the center of gravity/turn radius being towards the back of the robot -->
        <origin xyz="-0.05 -0.1225 0.0206" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
    </joint>
    
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0412" length="0.05" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0412" length="0.05" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.0412">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!-- DUMMY WHEELS AT FRONT AND BACK -->
    
    <joint name="front_left_bottom_wheel_joint" type="fixed">
        <parent link="base_link" />
        <child link="front_left_bottom_wheel" />
        <origin xyz="0.0763 -0.1225 0.0206" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="front_left_bottom_wheel">
        <xacro:robot_wheel />
    </link>

    <joint name="front_left_top_wheel_joint" type="fixed">
        <parent link="base_link" />
        <child link="front_left_top_wheel" />
        <origin xyz="0.1230 -0.1225 ${0.058845 + 0.0206}" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="front_left_top_wheel">
        <xacro:robot_wheel />
    </link>
    
    <joint name="front_right_bottom_wheel_joint" type="fixed">
        <parent link="base_link" />
        <child link="front_right_bottom_wheel" />
        <origin xyz="0.0763 0.1225 0.0206" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
    </joint>
    
    <link name="front_right_bottom_wheel">
        <xacro:robot_wheel />
    </link>

    <joint name="front_right_top_wheel_joint" type="fixed">
        <parent link="base_link" />
        <child link="front_right_top_wheel" />
        <origin xyz="0.1230 0.1225 ${0.058845 + 0.0206}" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="front_right_top_wheel">
        <xacro:robot_wheel />
    </link>

    <joint name="back_left_bottom_wheel_joint" type="fixed">
        <parent link="base_link" />
        <child link="back_left_bottom_wheel" />
        <origin xyz="-0.0763 -0.1225 0.0206" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="back_left_bottom_wheel">
        <xacro:robot_wheel />
    </link>

    <joint name="back_left_top_wheel_joint" type="fixed">
        <parent link="base_link" />
        <child link="back_left_top_wheel" />
        <origin xyz="-0.1230 -0.1225 ${0.058845 + 0.0206}" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="back_left_top_wheel">
        <xacro:robot_wheel />
    </link>

    <joint name="back_right_bottom_wheel_joint" type="fixed">
        <parent link="base_link" />
        <child link="back_right_bottom_wheel" />
        <origin xyz="-0.0763 0.1225 0.0206" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
    </joint>
    
    <link name="back_right_bottom_wheel">
        <xacro:robot_wheel />
    </link>

    <joint name="back_right_top_wheel_joint" type="fixed">
        <parent link="base_link" />
        <child link="back_right_top_wheel" />
        <origin xyz="-0.1230 0.1225 ${0.058845 + 0.0206}" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="back_right_top_wheel">
        <xacro:robot_wheel />
    </link>
</robot>
